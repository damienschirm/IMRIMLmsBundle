<h1>User list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Login</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Mail</th>
            <th>Issuspended</th>
            <th>Avatar</th>
            <th>Authtype</th>
            <th>Creationtime</th>
            <th>Updatetime</th>
            <th>Firstaccesstime</th>
            <th>Lastlogintime</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.login }}</td>
            <td>{{ entity.firstName }}</td>
            <td>{{ entity.lastName }}</td>
            <td>{{ entity.mail }}</td>
            <td>{{ entity.isSuspended }}</td>
            <td>{{ entity.avatar }}</td>
            <td>{{ entity.authType }}</td>
            <td>{% if entity.creationTime %}{{ entity.creationTime|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{% if entity.updateTime %}{{ entity.updateTime|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{% if entity.firstAccessTime %}{{ entity.firstAccessTime|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{% if entity.lastLoginTime %}{{ entity.lastLoginTime|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_user_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_user_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admin_user_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
